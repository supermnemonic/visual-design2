<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/eventitem"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_list"
    android:padding="0dp"
    android:layout_margin="0dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.65"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <TextView
            android:id="@+id/eventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="#363636"
            android:paddingTop="5dp"
            android:text="Let Success Make The Noise"/>
        <TextView
            android:id="@+id/eventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:text="Tanggalnya"
            android:textColor="#c68421"/>

        <LinearLayout
            android:id="@+id/eventTags"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">
            <TextView
                android:id="@+id/eventTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:padding="3dp"
                android:text="#Tag 1"
                android:textColor="#FFFFFF"
                android:background="#aec2ce"
                android:layout_marginRight="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/eventResume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="#6c6c6c"
            android:text="Lorem ipsum dolor sit amet, usu in vitae ornatus fabellas. Eu perfecto sententiae reprimique eum. Ferri complectitur at pro."/>

    </LinearLayout>

    <ImageView
        android:id="@+id/eventImg"
        android:layout_weight="0.35"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:layout_margin="1dp"
        android:src="@drawable/r1"
        android:scaleType="centerCrop"/>

</LinearLayout>