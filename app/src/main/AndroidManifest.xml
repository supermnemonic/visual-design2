<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mnemonic.icomputer.visualdesign">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true">
        <activity
            android:name="com.mnemonic.icomputer.visualdesign.HomeActivity"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mnemonic.icomputer.visualdesign.MainScreenActivity"
            android:label="@string/title_activity_main_screen"
            android:parentActivityName="com.mnemonic.icomputer.visualdesign.HomeActivity"
            android:theme="@style/AppTheme2"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mnemonic.icomputer.visualdesign.HomeActivity" />
        </activity>
        <activity
            android:name="com.mnemonic.icomputer.visualdesign.EventActivity"
            android:label="@string/title_activity_event"
            android:parentActivityName="com.mnemonic.icomputer.visualdesign.MainScreenActivity"
            android:theme="@style/EventTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mnemonic.icomputer.visualdesign.MainScreenActivity" />
        </activity>
        <activity
            android:name="com.mnemonic.icomputer.visualdesign.GuestActivity"
            android:label="@string/title_activity_guest"
            android:parentActivityName="com.mnemonic.icomputer.visualdesign.MainScreenActivity"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mnemonic.icomputer.visualdesign.MainScreenActivity" />
        </activity>
    </application>

    <uses-permission android:name="android.permission.INTERNET"/>

</manifest>